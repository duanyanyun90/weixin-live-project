scroll-view{height: 100%;padding-bottom: 10px;box-sizing: border-box;}
.container{display: block;padding-top: 46px;position: relative}
.refer-nav{
    width: 116px;
    height: 26px;
    margin: 10px auto;
    font-size: 12px;
    background-color: #fff;
    color: #da2825;
    border: 1px solid #da2825;
    border-radius: 5px;
    overflow: hidden;
}
.refer-nav-item{
    width: 50%;
    height: 26px;
    line-height: 26px;
    text-align: center;
}
.on{
    color: #fff;
    background-color: #da2825;
}
.refer-wrap{
    width: 100%;
}
.refer-table{
    height: 100%;
    padding: 0 13px;
}
.refer-item{
    padding: 15px 16px 12px;
    border: 1px solid #cccbcb;
    background-color: #fff;
    border-radius: 10px; 
    margin-bottom: 18px;
}
.view-img{
  width: 100%;
  height: 330rpx;
  overflow: hidden;
  background-color: #ccc;
}
.refer-img{width: 100%;height: auto;}
.refer-header{
    font-size: 16px;
    color: #333;
    height: 18px;
    line-height: 1;
    overflow: hidden;
}
.timer{
    font-size: 12px;
    color: #999;
    margin:5px 0 5px;
}
.refer-text{
    margin: 2px 0 5px;
    font-size: 14px;
    color: #666;
    line-height: 24px;
    max-height: 48px;
    overflow: hidden;
}
.purchase{
    align-items: center;
    font-size: 14px;
    padding-top: 10px;
    border-top: 1px solid #cccccc;
}
.price{color: #da2825;}
.purchase-btn{
    width: 81px;
    height: 23px;
    line-height: 23px;
    padding: 0;
    background-color: #da2825;
    font-size: 14px;
    color: #fff;
    margin-right: 0;
    text-indent: -5px;
}
.purchase-btn::before,.read-text::before{
    content:" ";
    display:inline-block;
    height:6px;
    width:6px;
    border-width:1px 1px 0 0;
    border-color:#fff;
    border-style:solid;
    -webkit-transform:matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    transform:matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    position:absolute;
    right:6px;
    top:8px;
}
.button-hover{background-color: #ac0001;}
.read-text{
    float: right;
    position: relative; 
    padding-right: 15px; 
}
.read-text::before{
    border-color:#333; 
    right:4px;
    top:6px;
}
.read-text:active{opacity: 0.8;}
.nav-fixed{
    width: 100%;
    height: 46px;
    background-color: #ebebeb;
    position: fixed;
    left: 0;
    top: 0;
    z-index: 999;
}
.posa{
  position: absolute;
}
.posa-in {
  -webkit-animation: posa-in 0.3s forwards;
  animation: posa-in 0.3s forwards;
}
.posa-out {
  -webkit-animation: posa-out 0.3s forwards;
  animation: posa-out 0.3s forwards;
}
.no-posa {
  -webkit-animation: none;
  animation: none;
}
@-webkit-keyframes posa-in {
  0% {
    position: fixed;
  }
  100% {
    position: absolute;
  }
}
@keyframes posa-in {
  0% {
    position: fixed;
  }
  100% {
    position: absolute;
  }
}
@-webkit-keyframes posa-out {
  0% {
    position: absolute;
  }
  100% {
    position: fixed;
  }
}
@keyframes posa-out {
  0% {
    position: absolute;
  }
  100% {
    position: fixed;
  }
}