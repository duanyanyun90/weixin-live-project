.container{color:#333;overflow: hidden}
.header{
    align-items: center;
    background-color: #e84e4e;
    color:#fff;
    font-size: 16px;
    padding:22px 0 0;
    height: 169px;
}
.header-img{
    width: 62px;
    height: 62px;
    border-radius: 50%;
}
.header-name{
    height: 32px;
    line-height: 55px;
}
.header-bg{
    width: 100%;
    height: 39px;
    margin-top: 14px;
}
.mgb24{ margin: -1px 0 12px 0;}
.set-item{
    padding: 0 13px 0 50rpx;
    background-color: #fff;
    align-items: center;
    justify-content: space-between;
    position: relative;
    height: 42px;
}
.set-text:after{
    content: " ";
    display: inline-block;
    height: 8px;
    width: 8px;
    border-width: 1px 1px 0 0;
    border-color: #bebec0;
    border-style: solid;
    -webkit-transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    position: absolute;
    right:13px;
    top:16px;
}
.set-relief,.set-refer,.set-phone{border-width:0;position: relative}
.set-refer:before{
    content: '';
    height: 1px;
    width: 100%;
    background-color: #e5e5e5;
    margin-left: 50rpx;
    box-sizing: border-box;
    position: absolute;
    left: 0;
    bottom:0;  
}
.set-exit{
    margin-top: 15px;
    align-items: center;
    line-height: 42px;
    color:#d33d3e;
    font-size: 16px;
    padding: 0 13px;
}
.set-exit:active{background-color: #e9e9e9;}
.forthwith{
    position: absolute;
    left: 85px;
    top:8px;
    width: 10px;
    height: 10px;
    background-color: #d33d3e;
    border-radius: 50%;
}
.dbn{display: none;}
.header-view{
    width: 62px;
    height: 62px;
    border-radius: 50%;
    overflow: hidden
}
.bgf{background-color: #fff}